{
  "compilerOptions": {
    "target": "ES6",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "@/renderer/*": ["src/renderer/*"],
      "@/renderer/components/*": ["src/renderer/components/*"],
      "@/renderer/components/ui/*": ["src/renderer/components/ui/*"],
      "@/renderer/utils/*": ["src/renderer/utils/*"],
      "@/renderer/hooks/*": ["src/renderer/hooks/*"],
      "@/renderer/lib/*": ["src/renderer/lib/*"]
    }
  },
  "include": ["src", "vite.config.ts", "vite.main.config.ts", "vite.preload.config.ts", "vite.renderer.config.mts", "forge.config.ts"],
  "references": [{ "path": "./tsconfig.node.json" }]
}
